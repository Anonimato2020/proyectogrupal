<%= form_with(model: usuario, local: true, :html => {:class => "form-horizontal"}) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :autenticacions_id, :value => "1" %>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :nombres, "Nombres" %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :nombres, { :class => "form-control", :placeholder => "Nombres..." } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :apellidoPaterno, "Apellido Paterno" %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :apellidoPaterno, { :class => "form-control", :placeholder => "Apellido Paterno..." } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :apellidoMaterno, "Apellido Materno" %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :apellidoMaterno, { :class => "form-control", :placeholder => "Apellido Materno..." } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :documentos, "Tipo Documento" %>
    </div>
    <div class="col-sm-3"> 
      <%= form.select :documentos, [["DNI",1],["Pasaporte",2],["Carnet Extranjeria",3]], {:include_blank => "Seleccione"},{:class=>"form-control"} %>
    </div>

    <div class="col-sm-2">
      <%= form.label :numeroDocumento, "N° de documento" %>
    </div>
    <div class="col-sm-3">
      <%= form.text_field :numeroDocumento, { :class => "form-control", :placeholder => "Ingrese número de documento..." } %>
    </div>  
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :fechaNacimiento, "Fecha Nacimiento" %>
    </div>
    <div class="col-sm-3">
      <%= form.date_field :fechaNacimiento, {:class => "form-control"} %>
    </div>
    <div class="col-sm-2">
      <%= form.label :celular, "Celular" %>
    </div>
    <div class="col-sm-3">
      <%= form.text_field :celular, { :class => "form-control", :placeholder => "Celular..." } %>
    </div>
  </div>

  <div class= "form_group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :sexo, "Sexo" %>
    </div>
    <div class= "col-sm-8">
      <%= form.label :sexo, { :class => "radio-inline"} do %>
        <%= form.radio_button :sexo, "M" %>
        Masculino 
      <% end %> 
      <%= form.label :sexo, { :class => "radio-inline"} do %>
        <%= form.radio_button :sexo, "F" %>
        Femenino 
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= form.label :distrito, "Distrito" %>
    </div>
    <div class="col-sm-3">   
      <%= form.select :ubigeo_id, Ubigeo.all.collect {|u| [u.Distrito, u.idDistrito]}, {:include_blank => "Seleccione"}, {:class => "form-control"} %> 
    </div>
    <div class="col-sm-6">   
      <%= form.hidden_field :autenticacion_id, :value => session[:idusuario]  %>
    </div>
  </div>


  <div class="form-group">   
    <div class="actions col-sm-offset-4 col-sm-4">
      <%= form.submit "Grabar", :class => "btn btn-primary" %>
    </div>
    <div class="col-sm-4">
      <%= form.submit "Cerrar ", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
