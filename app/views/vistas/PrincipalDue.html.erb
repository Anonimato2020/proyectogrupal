<h1 class="text-center"><%= current_user.usuario %></h1>
<p>Aqui usted encontrara las opciones para poder manejar su cuenta y alquilar estacionamientos</p>
<%= form_for :upc, :html => { :method => :get, :class => "form-horizontal" } do |f| %>
<div class="form-group">
	<div class="col-sm-offset-10 col-sm-2">		
		<%= link_to "Cambiar Contraseña", edit_autenticacion_path(id: session[:user_id]) %>
		<%= link_to "Editar Perfil", new_usuario_path %>
		<%= link_to "Dar baja", "autenticacion", method: :delete, data: { confirm: '¿Está usted seguro?' } %>
		<%= link_to "Listar estacionamientos por fecha", :controller => "vistas", :action => "ListarEstac" %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-12">
		<%= link_to "Registrar nuevo estacionamiento", {:controller => "estacionamientos", :action => "new"}, {:class => "btn btn-primary btn-block input-lg"} %>
	</div>
</div>

	<% @estacionamientos.each do |estacionamiento| %>
	<div class="form-group">
		<div class="col-sm-4">
			<img src=<%= estacionamiento.img %> class="img-thumbnail" alt="Cinque Terre">
		</div>
		<div class="col-sm-6">
			<h2><%= estacionamiento.nombre %></h2>

			<p><strong>Precio: </strong><%= estacionamiento.precio %></p>
			<p><strong>Departamento: </strong><%= estacionamiento.departamento %> <strong>, Provincia: </strong><%= estacionamiento.provincia %> <strong>, Distrito: </strong><%= estacionamiento.distrito %></p>
			<p><strong>Dirección: </strong><%= estacionamiento.direccion %></p>
			<p><strong>Medidas: Largo: </strong><%= estacionamiento.largo %> <strong>m. Ancho: </strong></strong><%= estacionamiento.ancho %> <strong>m. Alto: </strong></strong><%= estacionamiento.alto %></p>
			<p><strong>Teléfono: </strong><%= estacionamiento.telf %></p>>
		</div>
		<div class="col-sm-2">
			<br>
			<%= link_to 'Ver más', estacionamiento %>
			<br>
			<%= link_to "Editar", edit_estacionamiento_path(estacionamiento) %>
			<br>
			<%= link_to 'Eliminar', estacionamiento, method: :delete, data: { confirm: '¿Está usted seguro?' } %>
			<br>
			<%= link_to "Servicios Adicionales", { :controller => "serv_adicionales", :action => "index" } %>
		</div>		
	</div>
	<% end %>

<% end %>
